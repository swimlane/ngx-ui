{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@swimlane/ngx-ui": ["projects/swimlane/ngx-ui/src/public_api"],
      "@swimlane/ngx-ui/*": ["projects/swimlane/ngx-ui/src/lib/*"],
      "@swimlane/ngx-ui-testing": ["projects/swimlane/ngx-ui-testing/index"],
      "@swimlane/ngx-ui-testing/*": ["projects/swimlane/ngx-ui-testing/*"],
      "@angular/*": ["node_modules/@angular/*"],
      "tslib": ["node_modules/tslib"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
