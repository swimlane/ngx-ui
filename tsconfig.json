{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@swimlane/ngx-ui": ["projects/swimlane/ngx-ui/src/public_api"],
      "@swimlane/ngx-ui/*": ["projects/swimlane/ngx-ui/src/lib/*"],
      "@angular/*": ["node_modules/@angular/*"],
      "tslib": ["node_modules/tslib"]
    },
    "allowSyntheticDefaultImports": true
  }
}
